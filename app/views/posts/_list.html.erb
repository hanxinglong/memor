<table class="table table-striped">
  <tbody>
    <% @posts.each do |post| %>
      <tr>
      	<td><%= link_to post.title, post %>
      		<%= link_to glyph('external-link'), post.url, title: post.title %>
      		<br/>
      		<small>(<%= t('posted_by')%> <%= link_to post.user.username, user_posts_path(post.user) %> <%= t('on_date', date: l(post.created_at, format: :date)) %>)</small>
      	</td>
      	<td><%= post.description %></td>
      	<td class="tags"><% post.tag_list.each do |tag|%>
				<%= link_to tag, tag_posts_path(tag), class: "btn btn-primary" %>
			<% end %></td>
		<% if user_signed_in? %>
        <td>
        	<% if post.user == current_user %>
        		<div class="btn-group">	
	        		<%= link_to glyph('pencil'), edit_post_path(post), title: t('edit'),
	        			class: "btn btn-inverse" %>
	        		<%= link_to glyph('trash'), post, method: :delete, title: t('delete'),
	        			data: { confirm: t('confirm_delete', post: post.title) },
	        			class: "btn btn-danger" %>
	        	</div>
	        <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
