<%= simple_form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.input :url %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :tag_list, hint: 'Use commas to separate tags.' %>
  
  <% if @suggested_tags %>
  	<div class="control-group string optional">
  		<label class="string optional control-label">Suggested tags</label>
  		<div class="controls">
	  		<% @suggested_tags.each do |tag| %>
	  			<a href="#" class="suggested_tag btn btn-primary btn-xs"><%= tag %></a>
	  		<% end %>
  		</div>
  	</div>
  <% end %>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
