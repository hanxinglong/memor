<h2>Listing posts</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      	<td><%= link_to post.title, post.url %></td>
      	<td><%= post.description %></td>
        <td>
        	<div class="btn-group">
	        	<%= link_to glyph('eye-open'), post, title: 'Show', class: "btn btn-info" %>
	        	<% if user_signed_in? %>
	        		<%= link_to glyph('pencil'), edit_post_path(post), title: 'Edit',
	        			class: "btn btn-inverse" %>
	        		<%= link_to glyph('trash'), post, method: :delete, title: 'Delete',
	        			data: { confirm: 'Are you sure you want to delete "' + post.title + '" ?' },
	        			class: "btn btn-danger" %>
	        	<% end %>
	        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
	<%= link_to glyph('plus') + ' New Post', new_post_path, class: "btn btn-success" %>
<% end %>
