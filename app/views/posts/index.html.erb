<h2>Listing posts</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      	<td><%= link_to post.title, post.url %></td>
      	<td><%= post.description %></td>
        <td>
        	<%= link_to 'Show', post %>
        	<% if user_signed_in? %>
        		<%= link_to 'Edit', edit_post_path(post) %>
        		<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
