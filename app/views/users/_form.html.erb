<%= simple_form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= t('user_errors_header', count: @user.errors.count) %></h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :username %>
  <%= f.input :password %>

  <div class="actions">
    <%= f.submit t('save'), class: 'btn btn-success' %>
  </div>
<% end %>
